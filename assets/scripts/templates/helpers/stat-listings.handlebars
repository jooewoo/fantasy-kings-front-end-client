{{#each this as |stat|}}

<div class="all-stats-table">
  <table class="table table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col"></th>
        <th scope="col">#</th>
        <th scope="col">Player</th>
        <th scope="col">Position</th>
        <th scope="col">Age</th>
        <th scope="col">Team</th>
        <th scope="col">Games Played</th>
        <th scope="col">Games Started</th>
        <th scope="col">Minutes</th>
        <th scope="col">FGM</th>
        <th scope="col">FGA</th>
        <th scope="col">FG%</th>
        <th scope="col">3PM</th>
        <th scope="col">3PA</th>
        <th scope="col">3P%</th>
        <th scope="col">2PM</th>
        <th scope="col">2PA</th>
        <th scope="col">2P%</th>
        <th scope="col">eFG</th>
        <th scope="col">FTM</th>
        <th scope="col">FTA</th>
        <th scope="col">FT%</th>
        <th scope="col">ORB</th>
        <th scope="col">DRB</th>
        <th scope="col">TRB</th>
        <th scope="col">Assists</th>
        <th scope="col">Steals</th>
        <th scope="col">Blocks</th>
        <th scope="col">Turnovers</th>
        <th scope="col">Personal Fouls</th>
        <th scope="col">Points</th>
      </tr>
    </thead>

    {{#stat}}
    <tbody class="all-stats-table">
      <tr class="stats-table" data-id="{{id}}">
        <td><button class="stats-button" data-id={{id}}><img src="https://img.icons8.com/color/30/000000/star.png" class="on-{{id}}">
        <img src="https://img.icons8.com/color/30/000000/filled-star.png" class="on  hidden" id="stats-button-{{id}}"></button></td>
        <th scope="row">{{id}}</th>
        <td>{{player}}</td>
        <td>{{position}}</td>
        <td>{{age}}</td>
        <td>{{team}}</td>
        <td>{{games_played}}</td>
        <td>{{games_started}}</td>
        <td>{{minutes}}</td>
        <td>{{fg}}</td>
        <td>{{fga}}</td>
        <td>{{fg_percentage}}</td>
        <td>{{three_pointers}}</td>
        <td>{{three_point_attempts}}</td>
        <td>{{three_point_percentage}}</td>
        <td>{{two_pointers}}</td>
        <td>{{two_point_attempts}}</td>
        <td>{{two_point_percentage}}</td>
        <td>{{efg}}</td>
        <td>{{ft}}</td>
        <td>{{fta}}</td>
        <td>{{ft_percentage}}</td>
        <td>{{orb}}</td>
        <td>{{drb}}</td>
        <td>{{trb}}</td>
        <td>{{ast}}</td>
        <td>{{stl}}</td>
        <td>{{blk}}</td>
        <td>{{tov}}</td>
        <td>{{pf}}</td>
        <td>{{points}}</td>
      </tr>
    </tbody>
    {{/stat}}
  </table>
</div>


{{/each}}
